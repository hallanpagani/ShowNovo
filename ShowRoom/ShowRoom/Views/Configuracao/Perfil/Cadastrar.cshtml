@model ShowRoomModelo.model.adm.Perfil

@{
    ViewBag.Title = "Cadastro de Perfil";
    ViewBag.SubTitle = "Cadastro de Perfil";
    ViewBag.LinkText = "Consultar";
    ViewBag.ActionName = "Consultar";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-row">
            <div class="col-md-3 mb-3">
                @Html.LabelFor(model => model.tp_perfil, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(model => model.tp_perfil, new { @maxlength = "100", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tp_perfil, "", new { @class = "text-danger" })
            </div>            
        </div>
        
        <h4 class="subtitulo-form">Conceder acesso as opções: </h4>

        <div class="form-row">
            <div class="col-md-4 mb-6">      
                @Html.CheckBoxFor(model => model.agenda)
                @Html.LabelFor(model => model.agenda)                
                <br />
                @Html.CheckBoxFor(model => model.clientes)
                @Html.LabelFor(model => model.clientes)
                <br />
                @Html.CheckBoxFor(model => model.vendedores)
                @Html.LabelFor(model => model.vendedores)
                <br />
                @Html.CheckBoxFor(model => model.showroom)
                @Html.LabelFor(model => model.showroom)
            </div>
        </div>            

        <hr />
        <h4 class="subtitulo-form">Cadastro de Marcas</h4>

        <div class="form-row">
            <div class="col-md-4 mb-4">
                @Html.CheckBoxFor(model => model.marcas)
                @Html.LabelFor(model => model.marcas)
                <br />
                @Html.CheckBoxFor(model => model.grupoMarcas)
                @Html.LabelFor(model => model.grupoMarcas)
                <br />
                @Html.CheckBoxFor(model => model.colecao)
                @Html.LabelFor(model => model.colecao)
                <br />
                @Html.CheckBoxFor(model => model.geracao)
                @Html.LabelFor(model => model.geracao)
            </div>
        </div>

        <hr />
        <h4 class="subtitulo-form">Localização</h4>

        <div class="form-row">
            <div class="col-md-4 mb-4">
                @Html.CheckBoxFor(model => model.cidade)
                @Html.LabelFor(model => model.cidade)
                <br />
                @Html.CheckBoxFor(model => model.mesorregião)
                @Html.LabelFor(model => model.mesorregião)
                <br />
                @Html.CheckBoxFor(model => model.estado)
                @Html.LabelFor(model => model.estado)
                <br />
                @Html.CheckBoxFor(model => model.pais)
                @Html.LabelFor(model => model.pais)
            </div>
        </div>

        <hr />
        <h4 class="subtitulo-form">Configuração</h4>

        <div class="form-row">
            <div class="col-md-3 mb-3">
                @Html.CheckBoxFor(model => model.conta)
                @Html.LabelFor(model => model.conta)
                <br />
                @Html.CheckBoxFor(model => model.perfil)
                @Html.LabelFor(model => model.perfil)
                <br />
                @Html.CheckBoxFor(model => model.usuario)
                @Html.LabelFor(model => model.usuario)
            </div>
        </div>

    </div>

    <br />
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-default" />
    </div>

}

@section Scripts {
    @{ /* Scripts.Render("~/bundles/jqueryval") */ }

    <script src="~/scripts/terceiros/data.js" type="text/javascript"></script>
    <script src="~/scripts/terceiros/cpfcnpj.js" type="text/javascript"></script>
    <script src="~/scripts/terceiros/telefone.js" type="text/javascript"></script>

    <script type="text/javascript">
       
    </script>
}
