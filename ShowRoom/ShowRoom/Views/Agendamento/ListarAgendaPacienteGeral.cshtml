@model ListaAgendaPacienteViewModel
@using FlyAdmin.App_Helpers.Componentes

@{
    ViewBag.NomeDaJanela = "Listar agenda do cliente";
    ViewBag.Action = "CadastrarAgenda";
    ViewBag.Controller = "Agenda";
    ViewBag.Title = "Agenda cadastradas";
    ViewBag.IconeTopo = "fa-list";
}

<div id="content">

    <div class="well padding-5 no-margin">
        <form action="/Agenda/ListarAgendaPacienteGET" class="smart-form" id="pesquisar" method="GET">
            @Html.Partial("_ValidationSummary")
            <div class="row">

                <section class="col col-sm-12 col-md-3 col-lg-3">
                    <label class="" for="filtro_grupo">Grupo do serviço</label>
                    <select id="Grupos" name="filtro_grupo" class="requerido" style="width:100%">
                        @if (@Model.filtro_grupo != 0)
                        {
                            <option value="@Model.filtro_grupo">@Model.filtro_nm_grupo</option>
                        }
                    </select>
                    @Html.HiddenFor(model => model.filtro_nm_grupo)
                </section>


                <section class="col col-sm-12 col-md-3 col-lg-3">
                    <label class="" for="filtro_colaborador">Colaborador</label>
                    <select id="Colaboradores" name="filtro_colaborador" class="requerido" style="width:100%">
                        @if (@Model.filtro_colaborador != 0)
                        {
                            <option value="@Model.filtro_colaborador">@Model.filtro_nm_colaborador</option>
                        }
                    </select>
                    @Html.HiddenFor(model => model.filtro_nm_colaborador)
                </section>
                <section class="col col-sm-12 col-md-3 col-lg-3">
                    <label class="" for="filtro_cliente">Cliente</label>
                    <select id="Clientes" name="filtro_cliente" class="requerido" style="width:100%">
                        @if (@Model.filtro_cliente != 0)
                        {
                            <option value="@Model.filtro_cliente">@Model.filtro_nm_cliente</option>
                        }
                    </select>
                    @Html.HiddenFor(model => model.filtro_nm_cliente)
                </section>


                <section class="col col-sm-12 col-md-2 col-lg-2">
                    <label class="" for="filtro_servico">Serviço</label>
                    <select id="Servicos" name="filtro_servico" class="requerido" style="width:100%">
                        @if (@Model.filtro_servico != 0)
                        {
                            <option value="@Model.filtro_servico">@Model.filtro_nm_servico</option>
                        }
                    </select>
                    @Html.HiddenFor(model => model.filtro_nm_servico)
                </section>

                <section class="col col-sm-12 col-md-2 col-lg-2">
                    <label class="" for="filtro_convenio">Convênio</label>
                    <select id="Convenios" name="filtro_convenio" class="requerido" style="width:100%">
                        @if (@Model.filtro_convenio != 0)
                        {
                            <option value="@Model.filtro_convenio">@Model.filtro_nm_convenio</option>
                        }
                    </select>
                    @Html.HiddenFor(model => model.filtro_nm_convenio)
                </section>
                
                
                <section class="col col-sm-12 col-md-4 col-lg-3">
                    <label class="" for="filtro_data">Período Agenda</label>
                    @Html.Partial("Componentes/_DatasRange")
                </section>
                

                <section class="col col-sm-12 col-md-1 col-lg-1">
                    <label class="">&nbsp;</label>
                    <div>
                        @{ /* style="margin-top: 16px !important; padding: 6px 12px !important;" */ }
                        @Html.BotaoFiltrar()
                    </div>
                </section>

            </div>
        </form>
    </div>

    <div class="row no-padding no-margin">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
        </div>
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
            <ul id="sparks" class="">
                <li class="sparks-info">
                    <h5> Valor Total <span class="txt-color-blue" style="text-align: center;" id="at">  @Model.ListarAgenda.Sum(x => x.vl_servico2).ToString("#,##0.00")</span></h5>
                </li>
            </ul>
        </div>
    </div>

    <div class="row">
        <section id="widget-grid" class="">

            <article class="col-xs-12 col-sm-12 col-md-12 @ViewBag.Tamanho">
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false"
                     data-widget-sortable="false"
                     data-widget-deletebutton="false"
                     data-widget-togglebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa @ViewBag.IconeTopo"></i> </span>
                        <h2>@ViewBag.NomeDaJanela</h2>
                    </header>
                    <div class="row">
                        <!-- NEW WIDGET START -->
                        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                            <!-- Widget ID (each widget will need unique ID)-->
                            <div class="jarviswidget jarviswidget-color-darken" id="wid-id-2"
                                 data-widget-editbutton="false"
                                 data-widget-fullscreenbutton="true"
                                 data-widget-sortable="false"
                                 data-widget-deletebutton="false"
                                 data-widget-togglebutton="false">
                                <!-- widget options:
                                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">
                                    x
                                    data-widget-colorbutton="false"
                                    data-widget-editbutton="false"
                                    data-widget-togglebutton="false"
                                    data-widget-deletebutton="false"
                                    data-widget-fullscreenbutton="false"
                                    data-widget-custombutton="false"
                                    data-widget-collapsed="true"
                                    data-widget-sortable="false"

                                    -->
                                <header>
                                    <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                                    <h2>@ViewBag.NomeDaJanela</h2>
                                </header>
                                <!-- widget div-->
                                <!-- widget edit box -->
                                <div class="jarviswidget-editbox">
                                    <!-- This area used as dropdown edit box -->

                                </div>
                                <!-- end widget edit box -->
                                <!-- widget content -->
                                <div class="widget-body no-padding">
                                    <table id="datatable_tabletools" class="table table-striped table-bordered table-hover" width="100%">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Cliente
                                                </th>
                            
                                                <th>
                                                    Data agendada
                                                </th>
                                                <th>
                                                    Convênio
                                                </th>
                                                <th>
                                                    Nome do tratamento
                                                </th>
                                                <th>
                                                    Valor
                                                </th>
                                                <th>
                                                    Responsável
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.ListarAgenda)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.nm_cliente)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.dt_agenda)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.nm_convenio2)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.nm_servico)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.vl_servico2)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.nm_colaborador)
                                                    </td>

                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- end widget content -->
                                <!-- end widget div -->
                            </div>
                            <!-- end widget -->

                        </article>
                    </div>
                </div>
            </article>
        </section>
    </div>
</div>


