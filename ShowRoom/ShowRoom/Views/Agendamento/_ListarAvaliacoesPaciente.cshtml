@model List<FlyAdminModelo.model.consultorio.Avaliacao>

@{
    ViewBag.NomeDaJanela = "Listar avaliações de finalizadas";
    ViewBag.Action = "CadastrarAgenda";
    ViewBag.Controller = "Avaliação";
    ViewBag.Title = "Histórico Avaliações";
    ViewBag.IconeTopo = "fa-list";
}

<table id="datatable_avaliacao" class="table table-striped table-bordered table-hover" width="100%">
    <thead>
        <tr>
            <th>
                id
            </th>
            <th>
                Cliente
            </th>
            <th>
                Data avaliação
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nm_cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.data_avaliacao)
                </td>
                <td class="col-md-1 col-lg-1">
                    @Html.ActionLink("Visualizar", "EditarCliente", "Cadastros", new { id = item.id_cliente, id_avaliacao = item.Id }, new { @class = "btn btn-primary visualizar_avaliacao" })
                </td>
            </tr>

        }
    </tbody>
</table>



