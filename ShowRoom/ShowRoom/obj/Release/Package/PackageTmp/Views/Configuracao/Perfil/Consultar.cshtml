@model IEnumerable<ShowRoomModelo.model.adm.Perfil>

@{
    ViewBag.Title = "Consultar Perfil";
    ViewBag.LinkText = "Cadastrar";
    ViewBag.ActionName = "Cadastrar";
}

<div class="table-responsive">
    <table id="datatable-1" class="table table-datatable  table-hover">
        <thead>
            <tr>
                <th>
                    Data de Inclusão
                </th>
                <th>
                    Perfil
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DhInc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tp_perfil)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Cadastrar", new { id = item.Id }, new { @class = "btn btn-info btn-sm btn-sm waves-effect waves-light" })
                        @Html.ActionLink("Excluir", "Excluir", new { id = item.Id }, new { @class = "btn btn-danger btn-sm btn-sm waves-effect waves-light" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
