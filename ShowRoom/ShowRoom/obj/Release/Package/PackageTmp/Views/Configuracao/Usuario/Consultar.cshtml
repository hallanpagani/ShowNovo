@model IEnumerable<ShowRoomModelo.model.adm.Usuario>

@{
    ViewBag.Title = "Consulta de usuário";
    ViewBag.LinkText = "Cadastrar";
    ViewBag.ActionName = "Cadastrar";
}

<div class="table-responsive">
    <table id="datatable-1" class="table table-datatable  table-hover">
        <thead>
            <tr>
                <th>
                    Login
                </th>
                <th>
                    Nome do usuário
                </th>
                <th>
                    Senha
                </th>
                <th>
                    Código do Perfil
                </th>
                <th>
                    Ativo
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeDoUsuario)
                    </td>
                    <td>
                       ******
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPerfil)
                    </td>
                    <td>
                        @if (item.is_ativo == 0)
                        {
                            @Html.ActionLink("Ativar", "Ativar", new { id = item.Id }, new { @class = "btn btn-info btn-sm btn-sm waves-effect waves-light" })
                        }
                        else
                        {
                            @Html.ActionLink("Desativar", "Desativar", new { id = item.Id }, new { @class = "btn btn-danger btn-sm btn-sm waves-effect waves-light" })
                        }
                        @Html.ActionLink("Editar", "Cadastrar", new { id = item.Id }, new { @class = "btn btn-info btn-sm btn-sm waves-effect waves-light" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
