@model ShowRoomModelo.model.cadastros.Cidade


@{
    ViewBag.Title = "Cadastro de Cidades";
    ViewBag.SubTitle = "Cadastro de Cidades";
    ViewBag.LinkText = "Consultar";
    ViewBag.ActionName = "Consultar";
}



@using (Html.BeginForm())
