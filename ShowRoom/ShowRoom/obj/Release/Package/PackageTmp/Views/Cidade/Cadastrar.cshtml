        $(document).ready(function () {


            var Url = '@Url.Action("GetRegiao", "Regiao")';
            $("#Regiao").select2({
                placeholder: "Selecione uma região",
                minimumInputLength: 0,
                language: "pt-BR",
                ajax: {
                    dataType: "json",
                    url: Url,
                    data: function (params) {
                        return {
                            term: params.term // search term
                        };
