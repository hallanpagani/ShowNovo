@using FlyAdmin.App_Helpers.Componentes

<style>
    .datepicker_modal {
        z-index: 1151 !important;
    }

    .modal-content textarea {
        min-width: 100%;
    }
</style>

<div class="modal fade modal_mensagem">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Enviar mensagem</h4>
            </div>
            <div class="modal-body">

                <div class="form-horizontal smart-form">

                    <textarea id="Mensagem_modal" lenght="160" name="Mensagem_modal" rows="10" ></textarea>
                </div>
            </div>
            <div class="modal-footer">

                <input id="id-agenda" style="display:none;" />

                <button type="button" id="btn-cancelar-mensagem" class="btn btn-warning pull-left" data-dismiss="modal">Cancelar</button>
                <a href="#" id="enviar_mensagem" class="btn btn-success pull-right">Enviar</a>

            </div>
        </div>
    </div>
</div>


