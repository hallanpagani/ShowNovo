@using ShowRoom.App_Helpers.Componentes

<style>
    .datepicker_modal {
        z-index: 1151 !important;
    }
</style>

<div class="modal fade modal-editar-evento">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <h4 class="modal-title">Editar agendamento</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">


                <div class="col-md-12 mb-3">
                    <label class="" for="id_cliente2">Cliente</label>
                    <select id="Clientes2" name="id_cliente2" class="requerido" style="width:100%"></select>
                </div>

                <div class="col-md-12 mb-3">
                    <label class="" for="id_marca2">Marca</label>
                    <select id="Marcas2" name="id_marca2" class="requerido" style="width:100%"></select>
                </div>

                <div class="col-md-12 mb-3">
                    <label class="" for="id_colecao2">Colecao</label>
                    <select id="Colecoes2" name="id_colecao2" class="requerido" style="width:100%"></select>
                </div>

                <div class="form-row">
                    <div class="col-md-5 ml-4 mb-3" style="padding: 0px !important;">
                        <label for="dt_agenda2">Data agendada</label>
                        <input length="10" name="dt_agenda2" class="form-control " id="dt_agenda2" maxlength="5" data_dateformat="HH:MM" type="text" value="">
                    </div>

                    <div class="col-md-5 ml-4 mb-3">
                        <label for="hr_agenda2">Horário</label>
                        <input length="10" name="hr_agenda2" class="form-control " id="hr_agenda2" maxlength="5" data_dateformat="HH:MM" type="text" value="">
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-3 ml-4" style="padding: 0px !important;">
                        <label class="" for="is_secao">Sessão</label>
                        <select class="form-control" id="is_secao" name="is_secao">
                            <option value="1"><span style="background-color: #0b51c1;"></span>Agendado</option>
                            <option value="2"><span style="background-color: #095616;"></span>Confirmado</option>
                            <option value="4"><span style="background-color: #ff3333;"></span>Faltou</option>
                        </select>
                    </div>
                </div>

                <hr />
                <div class="form-row mt-3">
                    <div class="col-md-3 ml-4">
                        <label class="checkbox">
                            <input type="checkbox" name="reservasuite" id="reservasuite">
                            <i></i>Reserva Suíte?
                        </label>
                    </div>

                    <div class="col-md-3 ml-2">
                        <label class="checkbox">
                            <input type="checkbox" name="clientenovo" id="clientenovo">
                            <i></i>Cliente Novo?
                        </label>
                    </div>

                    <div class="col-md-4 ml-2">
                        <label class="checkbox">
                            <input type="checkbox" name="atendeshowroom" id="atendeshowroom">
                            <i></i>Atende ShowRoom?
                        </label>
                    </div>

                </div>
                <hr />

                <div class="form-row mt-4">
                    <section class="col-md-3 ml-4">
                        <button type="button" id="btn-agendado" data-valor="1" class="btn btn-primary pull-left confirmacao" data-dismiss="modal">Editar</button>
                    </section>                     
                    <div class="col-md-3 ml-4">
                        <button type="button" id="btn-confirmado" data-valor="2" class="btn btn-default pull-left confirmacao" style="color: #fff!important;background-color: #095616;" data-dismiss="modal">Confirmado</button>
                    </div>
                    <div class="col">
                        <button type="button" id="btn-faltou" data-valor="4" class="btn btn-default pull-right confirmacao" style="color: #fff!important;background-color: #ff3333!important;" data-dismiss="modal">Faltou</button>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" id="btn-cancelar-edicao" class="btn btn-warning pull-left" data-dismiss="modal" style="color: #6d6565 !important;">Fechar</button>
                <a href="#" id="link_cadastro" class="btn btn-primary pull-left" target="_blank">Ir ao Cadastro</a>
                <!--  <button type="button" id="btn-exluir" data-valor="999" class="btn btn-danger confirmacao" data-dismiss="modal">Excluir</button> -->
                <input id="id-agenda" style="display:none;" />

            </div>
        </div>

    </div>
</div>

