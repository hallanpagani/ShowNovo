@model List<ShowRoomModelo.model.cadastros.Agendamento>

@{
    ViewBag.NomeDaJanela = "Listar agendamentos";
    ViewBag.Action = "CadastrarAgenda";
    ViewBag.Controller = "Agenda";
    ViewBag.Title = "Agenda cadastradas";
    ViewBag.IconeTopo = "fa-list";
}

<table id="datatable_tabletools" class="table table-striped table-bordered table-hover" width="100%">
    <thead>
        <tr>
            <th>
                id
            </th>
            <th>
                Status
            </th>
            <th>
                Data agendada
            </th>
            <th>
                Horário
            </th>
            <th>
                Marca
            </th>
            <th>
                Coleção
            </th>
            <th>
                Cliente
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tp_status_nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dt_agenda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hr_agenda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nm_servico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nm_colaborador)
                </td>

                <td class="col-md-1 col-lg-1">
                    <button type="button" data-idagenda="@item.id" class="btn btn-primary editar_agenda" >Editar</button>
                </td>
            </tr>

        }
    </tbody>
</table>

@Html.Partial("Modal/_EditarAgenda")


