@model ShowRoomModelo.model.cadastros.Colecao
@using ShowRoom.App_Helpers.Componentes

@{
    ViewBag.Title = "Cadastro de Coleção";
    ViewBag.SubTitle = "Cadastro de Coleção";
    ViewBag.LinkText = "Consultar";
    ViewBag.ActionName = "Consultar";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.colecao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.colecao, new { htmlAttributes = new { @class = "form-control", @maxlength = "8", @autofocus = "autofocus" } })
                @Html.ValidationMessageFor(model => model.colecao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control", @maxlength = "30" } })
                @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.datainicio, htmlAttributes: new { @class = "control-label col-md-2" })
            <section class="col col-sm-12 col-md-3 col-lg-2">
               @Html.TextBox("datainicio", "", new { @maxlength = "10", @data_dateformat = "dd/mm/yy", @onkeypress = "mascaraDT(this, DATA)", @autocomplete="off", @placeholder="DD/MM/YYYY" ,  @filtrar = "", @onclick = "this.focus();this.select()", @class = "form-control date datepicker" })
               @Html.ValidationMessageFor(model => model.datainicio, "", new { @class = "text-danger" })
            </section>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.qtdsemanas, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.qtdsemanas, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.qtdsemanas, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.colecaoequivalente, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.colecaoequivalente, new { htmlAttributes = new { @class = "form-control", @maxlength = "8" } })
                @Html.ValidationMessageFor(model => model.colecaoequivalente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>

}

@section Scripts {

    <script src="~/scripts/terceiros/data.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/scripts/assets/plugins/jquery-mask/jquery.mask.min.js"></script>

    <script type="text/javascript">
        

    </script>

}
